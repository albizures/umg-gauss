timeTrans = 0.5s
animation-transition(n)
	-webkit-transition all n ease-in-out
	-moz-transition all n ease-in-out
	-ms-transition all n ease-in-out
	-o-transition all n ease-in-out
	transition all n ease-in-out
scale-transform(n)
	-webkit-transform: scale(n)
	-moz-transform: scale(n)
	-ms-transform: scale(n)// IE9 only
	-o-transform: scale(n)
	transform: scale(n)
body
	overflow hidden;
main.item
	width 400px
	margin 100px auto
	position static
	background: white
	border-radius: 3px;
	animation-transition(timeTrans)
	.collection
		animation-transition(timeTrans)
		width 400px
		.collection-item
			cursor pointer
	&.active
		width: 173px
		border-radius: 50%
		.collection
			border 0
			border-radius: 50%
			height: 173px
			width: 173px
			*
				opacity: 0
				display none
	&.second
		scale-transform(10)

.seccion,.close
	animation-transition(timeTrans)
	position fixed
	top 0
.close
	margin 20px
	color white
	font-size 40px
	right -100%
	z-indesx 200
	&.active
		right 0%

.seccion
	padding 10px
	height 100%
	width 100%
	left -100%
	div.card
		width 500px
		margin 0 auto
	&.active
		left 0
